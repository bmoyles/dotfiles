#!/bin/bash

funcdirs=(
  "${DOTLOCAL}"/shell/functions
  "${SHELLDOTDIR}"/functions
)

if [[ -n ${ZSH_NAME:-} ]]; then
  fpath=(
    "${DOTLOCAL}/shell/functions/zsh"
    "${SHELLDOTDIR}/functions/zsh"
    "${funcdirs[@]}"
    "${fpath[@]}"
  )
  declare -U fpath
fi

if [[ -n ${BASH:-} ]]; then
  . "${SHELLDOTDIR}"/bash/autoload
  export FPATH=(
    "${DOTLOCAL}/shell/functions/bash"
    "${SHELLDOTDIR}/functions/bash"
    "${funcdirs[@]}"
  )
fi

for funcdir in "${funcdirs[@]}"; do
  [[ -d ${funcdir} ]] || continue
  for funcfile in "${funcdir}"/*; do
    [[ -f ${funcfile} ]] || continue
    funcname="${funcfile##*/}"
    autoload "${funcname}"
  done
done
unset funcdirs funcname funcfile
